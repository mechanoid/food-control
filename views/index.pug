extend layout

block body
  - const qualities = ['😭','🤨','😍']

  h1 Food Control

  ul.grid
    li.button.grid-item
      a(href="/defecations/new").button-text 💩
    li.button.grid-item
      a(href="/snacks/new").button-text 🍿

  .overview

    if defecations
      shit-tivities
        h3 💩-tivities
        table.defecations
          thead
            th Date
            th Quality
          tbody
            each defecation in defecations
              tr

                td= formattedDate(defecation.defecation_date)
                td= qualities[defecation.quality]
      snack-tivities
        h3 🍿-tivities
        table.snacks
          thead
            th Date
            th Snack
          tbody
            each snack in snacks
              tr
                td= formattedDate(snack.date)
                td= snack.snack
