extend layout

block body
  - const qualities = ['😭','🤨','😍']

  h1 Food Control

  ul.grid
    li.button.grid-item
      a(href="/defecations/new").button-text 💩
    li.button.grid-item
      a(href="/snacks/new").button-text 🍿

  .overview.grid

    if defecations
      shit-tivities.grid-item
        h3 💩-tivities
        table.defecations
          thead
            th Date
            th Quality
          tbody
            each defecation in defecations
              tr
                td= new Date(defecation.defecation_date).toLocaleDateString('de-DE')
                td= qualities[defecation.quality]
      snack-tivities.grid-item
        h3 🍿-tivities
        table.snacks
          thead
            th Date
            th Snack
          tbody
            each snack in snacks
              tr
                td= new Date(snack.date).toLocaleDateString('de-DE')
                td= snack.snack
