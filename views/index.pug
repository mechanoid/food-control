extend layout

block body
  - const qualities = ['😭','🤨','😍']

  h1 Food Control

  ul.grid
    li.button.grid-item
      a(href="/defecations/new").button-text 💩
    li.button.grid-item
      a(href="#").button-text 🍿

  if defecations
    table.defecations
      each defecation in defecations
        tr
          td= defecation.date
          td= qualities[defecation.quality]

